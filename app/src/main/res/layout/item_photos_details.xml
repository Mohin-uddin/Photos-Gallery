<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivGalleryPicture"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_180sdp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDownload"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_baseline_downloading"
        app:layout_constraintBottom_toBottomOf="@id/ivGalleryPicture"
        app:layout_constraintEnd_toEndOf="@id/ivGalleryPicture"
        android:layout_margin="@dimen/_5sdp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivShare"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_baseline_share"
        app:layout_constraintBottom_toBottomOf="@id/ivGalleryPicture"
        app:layout_constraintStart_toStartOf="@id/ivGalleryPicture"
        android:layout_margin="@dimen/_5sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>